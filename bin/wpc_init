#!/bin/sh
set -e

if test ${1}X = X; then
  echo 'Usage: wpc_init name-of-project'
  exit 1
fi

REPLACEMENT=`echo ${1} | perl -pe 'chomp;s/[^A-Za-z0-9_-]/_/g'`

cat > docker-compose.yml <<END
version: "3"

volumes:
  mysql_data_!!!PROJECTNAME!!!:

services:
  mailcatcher:
    image: schickling/mailcatcher
    ports:
      - "1080:1080"

  beanstalk:
    image: schickling/beanstalkd

  mysql:
    image: mysql
    volumes:
      - mysql_data_!!!PROJECTNAME!!!:/var/lib/mysql
    environment:
      MYSQL_DATABASE: wordpress
      MYSQL_ROOT_PASSWORD: foobar

  wordpress:
    image: thedxw/wc-wordpress
    ports:
      - "80:80"
    links:
      - mysql
      - mailcatcher
      - beanstalk
    volumes:
      - .:/usr/src/app
      - ./wp-content:/var/www/html/wp-content
END

perl -pi -e 's/!!!PROJECTNAME!!!/'${REPLACEMENT}'/g' docker-compose.yml
